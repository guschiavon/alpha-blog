<div class="container">
  <h1>Portfolio</h1>
  <div class="row row-cols-1 row-cols-md-2">
    <% @portfolios.each do |portfolio| %>
      <div class="col-6 mb-4">
        <div class="card">
          <img src="..." class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= link_to portfolio.title, portfolio %></h5>
            <p class="card-text"><%= portfolio.overview %></p>
            <p class="card-text"><small class="text-muted"><%= time_ago_in_words(portfolio.created_at) %></small></p>
            <p class="card-text"><strong>Stack:</strong> <%= portfolio.tech %></p>
          </div>
        </div>
      </div>
    <% end %>  
  </div>
</div>
