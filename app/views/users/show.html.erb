<div class="container">
  <div class="alert alert-success alert-dismissable" role="alert">
    <p id="notice"><%= notice %></p>
  </div>
  <h1><%= @user.username %>'s Profile</h1>

  <%= gravatar_for @user, size: 200 %>
  <%= link_to "Edit profile", edit_user_path, class: "btn btn-outline-light mt-4" %>
  
  

  <h3 class="mt-4">Articles by <%= @user.username %>:</h3>
  <%= link_to "Create article", new_article_path, class: "btn btn-outline-primary mt-4" %>

  <%= render 'articles/article' %>

</div>