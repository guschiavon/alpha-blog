<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-4">
        <div class="card mt-4" style="width: 18rem;">
          <div class="card-body">
            <%= link_to gravatar_for(user, size: 150), user %>
            <h5 class="card-title text-center mt-2"><%= link_to user.username, user %></h5>
            <p class="text-center"><small><%= pluralize(user.articles.count, "article") %></small></p>
          </div>
          <ul class="list-group list-group-flush">
            <small class="text-muted text-center mb-4">Latest:</small>
            <% user.articles.take(3).each do |article, id| %>
              <li class="list-group-item text-center"><%= link_to article.title, article %></li>
            <% end %>
          </ul>
          <%= link_to "Edit profile", edit_user_path(user) %>
        </div>
      </div>
    <% end %>
  </div>
</div>