<%= render 'shared/errors', obj: @user %>
  
<%= form_with(model: @user, local: true) do |form| %>
  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, placeholder: "Between 3-25 charac." %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "Enter valid email" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "Enter your password" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
