<%= render 'shared/errors', obj: @article %>
<%= form_with(model: @article, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "text-light" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :description, class: "text-light" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :cover_picture, class: "text-light" %>
    <%= form.file_field :cover_picture, class: "form-control-file btn btn-outline-dark" %>
  </div>
  

  <div class="actions">
    <%= form.submit class: "btn btn-success mb-2" %>
  </div>
<% end %>

