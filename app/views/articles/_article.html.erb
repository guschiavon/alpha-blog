<div class="card-deck">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-lg-4 col-12">
        <div class="card mt-4">
          <img src="..." class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article) %></h5>
            <span class="text-muted">Posted by: <%= article.user.username if article.user %></span>
            <p class="card-text"><%= article.description %></p>
            <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-secondary" %>
            <button type="button" class="btn btn-outline-danger">Delete</button>
            <p class="card-text"><small class="text-muted">Posted <%= time_ago_in_words(article.created_at) %> ago. Last updated <%= time_ago_in_words(article.updated_at) %> ago.</small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>